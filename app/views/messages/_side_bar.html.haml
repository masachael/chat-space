.chat-side
  .side-bar
    .side-bar__box
      %p.side-bar__box__username
        = current_user.name
      %ul.side-bar__box__menu
        %li.side-bar__box__new-group
          = link_to new_group_path do
            = icon('fas', 'edit')
        %li.side-bar__boc__edit-user
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .groups
    - current_user.groups.each do |group|
      = link_to group_messages_path(group), class: "group" do
        .group-name
          = group.name
        .group__latest-message
          = group.show_last_message